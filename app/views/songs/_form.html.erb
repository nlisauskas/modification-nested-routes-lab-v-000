<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.hidden_field :artist_id %>
  <% if @song.artist.nil? %>
    <%= f.select :artist_id,
    options_from_collection_for_select(Artist.all, :id, :name) %><br>
    <% end %>
  <br />

  <%= f.submit %>
<% end %>
